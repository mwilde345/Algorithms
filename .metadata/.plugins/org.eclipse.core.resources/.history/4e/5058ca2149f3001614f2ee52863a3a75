package RSA;
import GroupOfUnits.groupOfUnits;

import java.math.BigInteger;
import java.util.ArrayList;

public class FullRSA {
	public static void main(String[] args){
		groupOfUnits gou = new groupOfUnits();
		BigInteger mod = BigInteger.valueOf(2537);
		int[] encipher= new int[] {1520,111,802,1005,2403,1724,1519,1406,1700,1507,2400};
		ArrayList<Integer> cyphered = new ArrayList<Integer>();
		ArrayList<Integer> decyphered = new ArrayList<Integer>();
		for(int e : encipher){
			int item = Integer.valueOf(modexp(BigInteger.valueOf(e),new BigInteger("61"),mod).toString());
			cyphered.add(item);
			System.out.println(item);
		}
		for(int c : cyphered){
			int item = Integer.valueOf(modexp(BigInteger.valueOf(c),new BigInteger("1837"),mod).toString());
			decyphered.add(item);
		}
		
	}	
	
	
	  public static BigInteger multiply(BigInteger a, BigInteger b){
		  return a.multiply(b);
	  }
	  public static BigInteger gcd(BigInteger a, BigInteger b){
		  return a.gcd(b);
	  }
	  public static BigInteger inverse(BigInteger a, BigInteger m){
		  return a.modInverse(m);
	  }
	  public static BigInteger modexp(BigInteger a, BigInteger b, BigInteger m){
		  return a.modPow(b, m);
	  }
}
